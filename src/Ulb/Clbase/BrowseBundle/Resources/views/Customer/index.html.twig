{#  src/Ulb/Clbase/BrowseBundle/Resources/views/Customer/index.html.twig  #}
{% extends '::base.html.twig' %}

{% block body -%}
<h1>База потенциальных Клиентов</h1>
<div class="panel panel-default">
    <div class="panel-heading">
        Клиенты: {{ customerOffset+1 }} &dash; {{ customerOffset+countPerPage }} ({{ countPerPage }}) из {{ totalCount }}
    </div>
    <!--div class="panel-body">
  
    </div-->    
    <div> <!-- class="table-responsive"-->
        <table class="table table-condensed table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Email</th>
                    <th>Телефон</th>
                    <th>Регион</th>
                    <th>Город</th>
                    <th>Улица</th>
                    <th>Дом</th>
                    <th>Корп.</th>
                    <th>Стр.</th>
                    <th>Подъезд</th>
                    <th>Этаж</th>
                    <th>Квартира</th>
                    <th>Операции</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('customer_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.firstName }}</td>
                    <td>{{ entity.lastName }}</td>
                    <td>{{ entity.email }}</td>
                    <td>{{ entity.tel }}</td>
                    <td>{{ entity.mainCity }}</td>
                    <td>{{ entity.town }}</td>
                    <td>{{ entity.street }}</td>
                    <td>{{ entity.houseNum }}</td>
                    <td>{{ entity.blockNum }}</td>
                    <td>{{ entity.buildNum }}</td>
                    <td>{{ entity.porch }}</td>
                    <td>{{ entity.floor }}</td>
                    <td>{{ entity.flat }}</td>
                    <td><ul class="list-unstyled">
                            <li>
                                <a  href="{{ path('customer_show', { 'id': entity.id }) }}">показать</a>
                            </li>
                            <li>
                                <a href="{{ path('customer_edit', { 'id': entity.id }) }}">изменить</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    
    <div class="panel-footer">
       
            <a href="{{ path('customer_new') }}" class="btn btn-default btn-group" role="button">
               Создать клиента
            </a>
        {% if totalPages>1 %}
        <ul class="btn-group pagination pagination-sm">

            <li {% if leftPage <=1 %}class="disabled"{% endif %}>
                <a href="{{ path('customer', { 'page': 1 }) }}">&laquo;</a></li>
            <li {% if leftPage <=1 %}class="disabled"{% endif %}><a href="#">&larr;</a></li>
                
            {% for pageN in leftPage..rightPage %}  
                <li {% if pageN==currentPage %}class="active"{% endif %}><a href="#">{{ pageN }}</a></li>
            {% endfor %}
            
            <li {% if rightPage >=totalPages %}class="disabled"{% endif %}><a href="#">&rarr;</a></li>
            <li {% if rightPage >=totalPages %}class="disabled"{% endif %}>
                <a href="{{ path('customer', { 'page': totalPages }) }}">&raquo;</a></li>
                 
        </ul>  
        {% endif %}
        <ul class="list-unstyled">
            <li>

            </li>
        </ul>
        
    </div>
</div>
{% endblock %}
