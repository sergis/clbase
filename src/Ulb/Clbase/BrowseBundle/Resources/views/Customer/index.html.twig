{#  src/Ulb/Clbase/BrowseBundle/Resources/views/Customer/index.html.twig  #}
{% extends '::base.html.twig' %}

{% block body -%}
<h1>База потенциальных Клиентов</h1>
<div class="panel panel-default">
    <div class="panel-heading">Список Клиентов</div>
    <!--div class="panel-body">
  
    </div-->    
    <div> <!-- class="table-responsive"-->
        <table class="table table-condensed table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Email</th>
                    <th>Телефон</th>
                    <th>Регион</th>
                    <th>Город</th>
                    <th>Улица</th>
                    <th>Дом</th>
                    <th>Корп.</th>
                    <th>Стр.</th>
                    <th>Подъезд</th>
                    <th>Этаж</th>
                    <th>Квартира</th>
                    <th>Операции</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('customer_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.firstName }}</td>
                    <td>{{ entity.lastName }}</td>
                    <td>{{ entity.email }}</td>
                    <td>{{ entity.tel }}</td>
                    <td>{{ entity.mainCity }}</td>
                    <td>{{ entity.town }}</td>
                    <td>{{ entity.street }}</td>
                    <td>{{ entity.houseNum }}</td>
                    <td>{{ entity.blockNum }}</td>
                    <td>{{ entity.buildNum }}</td>
                    <td>{{ entity.porch }}</td>
                    <td>{{ entity.floor }}</td>
                    <td>{{ entity.flat }}</td>
                    <td><ul class="list-unstyled">
                            <li>
                                <a  href="{{ path('customer_show', { 'id': entity.id }) }}">показать</a>
                            </li>
                            <li>
                                <a href="{{ path('customer_edit', { 'id': entity.id }) }}">изменить</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    
    <div class="panel-footer">
        <div class="btn btn-group nav nav-bar"> 
        <ul class="pagination pagination-sm">
          <li class="disabled"><a href="#">&laquo;</a></li>
          <li class="active"><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">5</a></li>
          <li><a href="#">&raquo;</a></li>
        </ul>  
        <ul class="list-unstyled">
            <li>
                <a href="{{ path('customer_new') }}" class="btn btn-default" role="button">
                    Создать клиента
                </a>
            </li>
        </ul>
        </div>
    </div>
</div>
{% endblock %}
